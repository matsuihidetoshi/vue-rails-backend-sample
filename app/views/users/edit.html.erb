<div class="text-center">
  <h1>管理者情報編集</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>

      <%= render 'layouts/error_messages', model: f.object %>

      <%= render 'users/form', f: f %>

      <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
    <% end %>
    <div data-turbolinks="false" class="return">
      <%= link_to '管理者情報へ戻る', @user, class: 'btn btn-warning btn-block' %>
      <%= link_to 'トップページへ戻る', root_path, class: 'btn btn-warning btn-block' %>
    </div>
  </div>
</div>